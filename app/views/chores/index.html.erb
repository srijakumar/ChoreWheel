<p id="notice"><%= notice %></p>

<% @chores.each do |chore|%>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to chore.title, chore %></h2>
    <p class="todo_list_subtitle"><%= chore.description %></p>
  </div>
<% end %>

<div class="links">
  <%= link_to "New Chores", new_chore_path %>
</div>

<footer class = "footer">
  <p>You're logged in as: <%=current_user.email %> </p>
  <p><%= link_to "Logout", logout_path %></p>
</footer>
