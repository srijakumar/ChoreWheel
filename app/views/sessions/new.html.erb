<section class="todoapp">
  <header class="header">
    <h1>Welcome to ChoreWheel! Please log in to see the chores available for this week!</h1>
      <%= form_tag(sessions_path) do |f| %>
        <%= text_field_tag :email, '', :class => "new-todo", :placeholder => "Login with your email" %>
        <%= password_field_tag :password, '', :class => "new-todo", :placeholder => "Enter password" %>
        <%= submit_tag %>
    <% end %>

  <p> New to our app? Please <%= link_to "Login via facebook", "/auth/facebook" %> or sign up using your email <%= link_to "New User Sign Up", "/users/new" %></p>

  </header>
  <footer class="footer">
  </footer>
</section>
